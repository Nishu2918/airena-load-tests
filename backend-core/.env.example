# ============================================
# GCC FUSION - Backend Core Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# DATABASE (REQUIRED)
# ============================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/gcc_fusion?schema=public"

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
API_PREFIX="api/v1"
CORS_ORIGIN="http://localhost:3000"

# ============================================
# AI SERVICE CONFIGURATION (REQUIRED for AI features)
# ============================================
AI_SERVICE_URL="http://localhost:8000"
AI_SERVICE_API_KEY="gcc-fusion-ai-service-key-change-in-production"
